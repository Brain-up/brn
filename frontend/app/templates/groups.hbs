{{page-title (t "groups.title")}}
<div class="sm:text-base sm:mt-6 flex justify-center mt-0 text-sm"><h3>{{t
      "groups.exercise_selection"
    }}</h3></div>
<ol
  class="series-container sm:flex-row flex flex-col items-center justify-center mt-3"
>
  <li class="list-item sm:mr-6 mr-0">
    <LinkTo @route="group" @model={{@model.lastObject}} title={{@model.lastObject.description}}>
      <ExerciseType
        @initial={{@model.lastObject.name}}
        class="speech-exercise"
      />
    </LinkTo>
  </li>
  <li class="list-item sm:mt-0 mt-3">
    <LinkTo @route="group" @model={{@model.firstObject}} title={{@model.firstObject.description}}>
      <ExerciseType
        @initial={{@model.firstObject.name}}
        class="non-speech-exercises"
      />
    </LinkTo>
  </li>
</ol>