<article role="contentinfo" aria-labelledby="descriptionPageHeader">
  <section class="space-y-5" role="contentinfo" aria-label="Welcome">
    <h1 id="descriptionPageHeader" class="text-3xl font-semibold">
      {{t "description.header" htmlSafe=true}}
    </h1>
    <p class="font-openSans font-semibold">
      {{t "description.intro"}}
    </p>
  </section>

  <hr class="my-10" />

  <section class="space-y-5" role="contentinfo" aria-labelledby="contextHeader">
    <h2 id="contextHeader" class="text-2xl font-semibold">
      {{t "description.context.header"}}
    </h2>
    {{#each (range 0 4 true) as |i|}}
      <p class="font-openSans">
        {{t (concat "description.context.text." i)}}
      </p>
    {{/each}}
  </section>

  <hr class="my-10" />

  <section class="space-y-5" aria-labelledby="exercisesHeader">
    <h2 id="exercisesHeader" class="text-2xl font-semibold">
      {{t "description.exercises.header"}}
    </h2>
    <div class="font-openSans space-y-5">
      <p>
        {{t "description.exercises.us_recomendations.title"}}
      </p>
      <p>
        <ul class="space-y-2 list-disc list-inside">
          {{#each (range 0 3 true) as |i|}}
            <li>
              {{t (concat "description.exercises.us_recomendations." i)}}
            </li>
          {{/each}}
        </ul>
      </p>
      <p>
        {{t "description.exercises.description.exercise_groups"}}
      </p>
      <p class="italic">
        {{t "description.exercises.description.non_speech_group"}}
      </p>
      <p>
        {{t "description.exercises.description.speech_group"}}
      </p>
      <p>
        <ol class="space-y-2 list-decimal list-inside">
          {{#each (range 0 2 true) as |i|}}
            <li>
              {{t (concat "description.exercises.series." i)}}
            </li>
          {{/each}}
        </ol>
      </p>
    </div>
  </section>

  <hr class="my-10" />

  <section class="space-y-5" aria-labelledby="helpHeader">
    <h2 id="helpHeader" class="text-2xl font-semibold">
      {{t "description.contribute.header"}}
    </h2>
    <p class="font-openSans">
      {{t "description.contribute.details"}}
      <a
        href={{t "description.contribute.bug_tracking.link"}}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:no-underline text-blue-light underline"
      >
        {{t "description.contribute.bug_tracking.title"}}
      </a>{{t "description.contribute.bug_tracking.goal"}}
    </p>
    <p class="font-openSans">
      {{t "description.contribute.contact_us"}}
      <a
        href="mailto:brainupproject@yandex.ru"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:no-underline text-blue-light underline"
      >
        brainupproject@yandex.ru
      </a>
    </p>
    <p class="font-openSans">
      {{t "description.contribute.motivation"}}
    </p>
  </section>

  <hr class="my-10" />

  <section
    class="space-y-5"
    role="contentinfo"
    aria-labelledby="usefulLinksHeader"
  >
    <h2 id="usefulLinksHeader" class="text-2xl font-semibold">
      {{t "description.links.header"}}
    </h2>
    <p class="font-openSans">
      <ol class="space-y-3 list-decimal list-inside">
        <li>
          {{t "description.links.articles.title"}}

          <a
            href={{t "description.links.articles.link"}}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:no-underline text-blue-light underline"
          >
            {{t "description.links.articles.link_title"}}
          </a>
        </li>

        <li>
          {{t "description.links.foreign_programs.title"}}
          <ul class="mt-3 ml-8 space-y-3 list-disc list-inside">
            {{#each (range 0 2 true) as |i|}}
              <li>
                <a
                  href={{t
                    (concat "description.links.foreign_programs." i ".link")
                  }}
                  class="hover:no-underline text-blue-light underline"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {{t
                    (concat "description.links.foreign_programs." i ".title")
                  }}
                </a>
                {{t
                  (concat
                    "description.links.foreign_programs." i ".description"
                  )
                }}
              </li>
            {{/each}}
          </ul>
        </li>

        <li>
          {{t "description.links.scientific_basis.header"}}

          <ul class="mt-3 ml-8 space-y-3 list-disc list-inside">
            {{#each (range 0 3 true) as |i|}}
              <li>
                <a
                  href={{t
                    (concat "description.links.scientific_basis." i ".link")
                  }}
                  class="hover:no-underline text-blue-light underline"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {{t
                    (concat "description.links.scientific_basis." i ".title")
                  }}
                </a>
              </li>
            {{/each}}
          </ul>
        </li>
      </ol>
    </p>
  </section>

  <hr class="my-10" />

  <section
    class="space-y-5"
    role="contentinfo"
    aria-labelledby="ourPeopleHeader"
  >
    <h2 id="ourPeopleHeader" class="text-2xl font-semibold">
      {{t "description.team.header"}}
    </h2>

    <section class="font-openSans">
      <p class="mb-10">
        {{t "description.team.thanks_words"}}
      </p>

      <ul class="flex flex-wrap justify-between p-10 -mx-4 bg-gray-100">
        {{#each this.persons.teamMembers as |teamMember i|}}
          <li class="w-24 h-24 m-2 my-4 overflow-hidden rounded-full">
            <img
              src={{teamMember.img}}
              alt={{t "description.team.image_alt" i=i}}
            />
          </li>
        {{/each}}
      </ul>

      <hr class="my-10" />
    </section>

    <section class="font-openSans">
      <p class="mb-10">
        {{t "description.doctors.thanks_words"}}
      </p>

      <ul class="flex flex-wrap justify-between p-5 -mx-4 bg-gray-100">
        {{#each this.persons.doctors as |doctor|}}
          <li class="md:w-1/2 lg:w-1/3 w-full p-5 text-center">
            <div class="w-48 h-48 m-auto mb-6 overflow-hidden rounded-full">
              <img src={{doctor.img}} alt={{doctor.name}} />
            </div>
            <h4 class="mb-2 text-base font-semibold">
              {{doctor.name}}
            </h4>
            <p class="text-sm">
              {{doctor.bio}}
            </p>
          </li>
        {{/each}}
      </ul>
    </section>
  </section>

  <hr class="my-10" />

  <section
    class="space-y-5"
    role="contentinfo"
    aria-labelledby="ourPeopleHeader"
  >
    <h2 class="text-2xl font-semibold">
      {{t "description.support.header"}}
    </h2>

    <ul class="flex flex-wrap justify-around p-6 -mx-4 bg-gray-100">
      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://www.epam.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-32"
            src="/content/pages/description/epam-logo.png"
            alt="EPAM"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://selectel.ru/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-40"
            src="/content/pages/description/selectel-logo.svg"
            alt="Selectel"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://www.jetbrains.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-16"
            src="/content/pages/description/jetbrains-logo.svg"
            alt="JetBrains"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://cloud.yandex.ru/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-40"
            src="/content/pages/description/yandex-cloud-logo.svg"
            alt="YandexCloud"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-16"
            src="/content/pages/description/github-logo.svg"
            alt="GitHub"
          />
        </a>
      </li>
    </ul>
  </section>

  <hr class="my-10" />

  <section class="space-y-5">
    <h2 class="text-3xl font-semibold">
      {{t "description.join_us.header" htmlSafe=true}}
    </h2>

    <p class="font-openSans">
      {{t "description.join_us.description"}}
    </p>
    <p class="font-openSans">
      {{t "description.join_us.contact.start"}}
      <a
        href="mailto:elena_moshnikova@epam.com"
        class="hover:no-underline text-blue-light underline"
      >
        elena_moshnikova@epam.com
      </a>
      <br />
      {{t "description.join_us.contact.end"}}
    </p>
    <p class="font-openSans">
      {{t "description.join_us.motivation"}}
    </p>
  </section>

  <hr class="my-10" />

  <section>
    <p class="my-10 text-2xl font-semibold text-center">
      {{t "description.support.thanks_words"}}
    </p>
  </section>

  <hr class="my-10" />
</article>