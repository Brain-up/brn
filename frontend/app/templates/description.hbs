<article role="contentinfo" aria-labelledby="descriptionPageHeader">
  <section class="space-y-5" role="contentinfo" aria-label="Welcome">
    <h1 id="descriptionPageHeader" class="text-3xl font-semibold">
      {{t "description.header" htmlSafe=true}}
    </h1>
    <p class="font-openSans font-semibold">
      {{t "description.intro"}}
    </p>
  </section>

  <hr class="mt-10 mb-10" />

  <section class="space-y-5" role="contentinfo" aria-labelledby="contextHeader">
    <h2 id="contextHeader" class="text-2xl font-semibold">
      {{t "description.context_header"}}
    </h2>
    <p class="font-openSans">
      {{t "description.context" htmlSafe=true}}
    </p>
  </section>

  <hr class="mt-10 mb-10" />

  <section class="space-y-5" aria-labelledby="programHeader">
    <h2 id="programHeader" class="text-2xl font-semibold">
      {{t "description.program_header"}}
    </h2>
    <p class="font-openSans">
      {{t "description.us_recomendations_list_title"}}
    </p>
    <p class="font-openSans">
      <ul class="space-y-2 list-disc list-inside">
        {{#each (range 1 4 true) as |number|}}
          <li>
            {{t (concat "description.us_recomendations_list_item_" number)}}
          </li>
        {{/each}}
      </ul>
    </p>
    <p class="font-openSans">
      {{t "description.exercises_description" htmlSafe=true}}
    </p>
    <p class="font-openSans">
      <ol class="space-y-2 list-decimal list-inside">
        {{#each (range 1 3 true) as |number|}}
          <li>
            {{t (concat "description.exercises_series_" number)}}
          </li>
        {{/each}}
      </ol>
    </p>
  </section>

  <hr class="mt-10 mb-10" />

  <section class="space-y-5" aria-labelledby="supportHeader">
    <h2 id="supportHeader" class="text-2xl font-semibold">
      {{t "description.support_header"}}
    </h2>
    <p class="font-openSans">
      {{t "description.support_details"}}
      <a
        href={{t "description.bugs_tracker_link"}}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:no-underline text-blue-light underline"
      >
        {{t "description.bugs_tracker_link_title"}}
      </a>{{t "description.possible_errors_reporting_goal"}}
    </p>
    <p class="font-openSans">
      {{t "description.contact_us_by_email"}}
      <a
        href="mailto:brainupproject@yandex.ru"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:no-underline text-blue-light underline"
      >
        brainupproject@yandex.ru
      </a>
    </p>
    <p class="font-openSans">
      {{t "description.motivation_to_contribute"}}
    </p>
  </section>

  <hr class="mt-10 mb-10" />

  <section
    class="space-y-5"
    role="contentinfo"
    aria-labelledby="usefulLinksHeader"
  >
    <h2 id="usefulLinksHeader" class="text-2xl font-semibold">
      {{t "description.useful_links_header"}}
    </h2>
    <p class="font-openSans">
      <ol class="space-y-3 list-decimal list-inside">
        <li>
          {{t "description.articles_about_project"}}

          <a
            href="https://habr.com/ru/company/epam_systems/blog/530824/"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:no-underline text-blue-light underline"
          >
            {{t "description.articles_about_project_link_text"}}
          </a>
        </li>

        <li>
          {{t "description.foreign_programs_title"}}

          <ul class="mt-3 ml-8 space-y-3 list-disc list-inside">
            <li>
              <a
                href="https://advancedbrain.com/"
                class="hover:no-underline text-blue-light underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                {{t "description.foreign_program_1_title"}}
              </a>
              {{t "description.foreign_program_1_description"}}
            </li>

            <li>
              <a
                href="http://musicalauditorytraining.com/"
                class="hover:no-underline text-blue-light underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                {{t "description.foreign_program_2_title"}}
              </a>
              {{t "description.foreign_program_2_description"}}
            </li>
            <li>
              <a
                href="https://www.scilearn.com/program/"
                class="hover:no-underline text-blue-light underline"
                target="_blank"
                rel="noopener noreferrer"
              >
                {{t "description.foreign_program_3_title"}}
              </a>
              {{t "description.foreign_program_3_description"}}
            </li>
          </ul>
        </li>

        <li>
          {{t "description.scientific_basis_header"}}

          <ul class="mt-3 ml-8 space-y-3 list-disc list-inside">
            <li>
              <a
                class="hover:no-underline text-blue-light underline"
                target="_blank"
                rel="noopener noreferrer"
                href="https://youtu.be/BMNrFENZ4Rw"
              >
                {{t "description.scientific_basis_1_title"}}
              </a>
            </li>
            <li>
              <a
                class="hover:no-underline text-blue-light underline"
                target="_blank"
                rel="noopener noreferrer"
                href="https://youtu.be/QUoBMSKq7zg"
              >
                {{t "description.scientific_basis_2_title"}}
              </a>
            </li>
            <li>
              <a
                class="hover:no-underline text-blue-light underline"
                target="_blank"
                rel="noopener noreferrer"
                href="https://www.ncbi.nlm.nih.gov/pmc/articles/PMC6417420/"
              >
                {{t "description.scientific_basis_3_title"}}
              </a>
            </li>
            <li>
              <a
                class="hover:no-underline text-blue-light underline"
                target="_blank"
                rel="noopener noreferrer"
                href="https://profkoroleva.ru/"
              >
                {{t "description.scientific_basis_4_title"}}
              </a>
            </li>
          </ul>
        </li>
      </ol>
    </p>
  </section>

  <hr class="mt-10 mb-10" />

  <section
    class="space-y-5"
    role="contentinfo"
    aria-labelledby="ourPeopleHeader"
  >
    <h2 id="ourPeopleHeader" class="text-2xl font-semibold">
      {{t "description.our_people_header"}}
    </h2>
    <h3 class="text-lg font-semibold">
      {{t "description.our_people_thanks"}}
    </h3>

    <section class="font-openSans">
      <p class="mb-10">
        {{t "description.our_team_header"}}
      </p>

      <ul class="flex flex-wrap justify-between p-10 -mx-4 bg-gray-100">
        {{#each (range 1 36 true) as |number|}}
          <li class="w-24 h-24 m-2 my-4 overflow-hidden rounded-full">
            <img
              src="/content/pages/description/engineers/image{{number}}.jpg"
              alt={{t "description.team_member_image_alt" number=number}}
            />
          </li>
        {{/each}}
      </ul>

      <hr class="mt-10 mb-10" />
    </section>

    <section class="font-openSans">
      <p class="mb-10">
        {{t "description.our_medical_consultants"}}
      </p>

      <ul class="flex flex-wrap justify-between p-5 -mx-4 bg-gray-100">
        {{#each (range 1 9 true) as |number|}}
          <li class="w-full md:w-1/2 lg:w-1/3 p-5 text-center">
            <div class="w-48 h-48 m-auto mb-6 overflow-hidden rounded-full">
              <img
                src="/content/pages/description/doctors/image{{number}}.jpg"
                alt={{t "description.doctor_image_alt" number=number}}
              />
            </div>
            <h4 class="mb-2 text-base font-semibold">
              {{t (concat "description.doctor" number "_name")}}
            </h4>
            <p class="text-sm">
              {{t (concat "description.doctor" number "_details")}}
            </p>
          </li>
        {{/each}}
      </ul>
    </section>
  </section>

  <hr class="mt-10 mb-10" />

  <section
    class="space-y-5"
    role="contentinfo"
    aria-labelledby="ourPeopleHeader"
  >
    <h2 class="text-2xl font-semibold">
      {{t "description.support_companies_header"}}
    </h2>

    <ul class="flex flex-wrap justify-around p-6 -mx-4 bg-gray-100">
      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://www.epam.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-32"
            src="/content/pages/description/epam-logo.png"
            alt="EPAM"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://selectel.ru/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-40"
            src="/content/pages/description/selectel-logo.svg"
            alt="Selectel"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://www.jetbrains.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-16"
            src="/content/pages/description/jetbrains-logo.svg"
            alt="JetBrains"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://cloud.yandex.ru/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-40"
            src="/content/pages/description/yandex-cloud-logo.svg"
            alt="YandexCloud"
          />
        </a>
      </li>

      <li class="flex items-center p-3">
        <a
          class="block"
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="w-16"
            src="/content/pages/description/github-logo.svg"
            alt="GitHub"
          />
        </a>
      </li>
    </ul>
  </section>

  <hr class="mt-10 mb-10" />

  <section class="space-y-5">
    <h2 class="text-3xl font-semibold">
      {{t "description.join_us_header" htmlSafe=true}}
    </h2>

    <p class="font-openSans">
      {{t "description.join_us_description"}}
    </p>
    <p class="font-openSans">
      {{t "description.join_us_contact"}}
      <a
        href="mailto:elena_moshnikova@epam.com"
        class="hover:no-underline text-blue-light underline"
      >
        elena_moshnikova@epam.com
      </a>
      <br />
      {{t "description.join_us_contact_ending"}}
    </p>
    <p class="font-openSans">
      {{t "description.join_us_motivation"}}
    </p>
  </section>

  <hr class="mt-10 mb-10" />
</article>