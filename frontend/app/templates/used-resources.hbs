{{page-title (t "header.used_resources")}}
<section class="container">
  <h1 class="mb-5 text-3xl font-bold">{{t "header.used_resources"}}</h1>
  <p class="mb-5">
    {{t "used_resources.subtitle"}}:
  </p>
  <ul class="pl-5 list-disc">
    {{#each @model.resources as |resource|}}
      <li class="text-purple-primary">
        <a
          href={{resource.href}}
          class="hover:underline cursor-pointer"
          target="_blank"
          rel="noopener noreferrer"
        >{{resource.title}}</a>
        <svg
          class="inline ml-1 align-text-top"
          width="18"
          height="18"
          viewBox="0 0 18 18"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill="currentColor"
            fill-rule="evenodd"
            d="M14 14H4V3.952h4V2H4C3 2 2 3 2 4v10c0 1 1 2 2 2h10c1 0 2-1 2-2v-4h-2v4zm2-12v6h-2l-.001-2.585-6.292 6.292-1.414-1.414L12.584 4H10V2h6z"
          >
          </path>
        </svg>
      </li>
    {{/each}}
  </ul>
</section>