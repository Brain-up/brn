<div class="w-full max-w-xs mx-auto">
  <form
    class="bg-white rounded px-8 pt-6 pb-8 mb-4


      {{if (not this.registrationInProgress) "shadow-lg"}}"
    {{on "submit" this.onSubmit}}
  >
    {{#if this.registrationInProgress}}
      <LoadingSpinner />
    {{else}}
      <div class="mb-4">
        <LoginForm::Input
          @label={{t "rigistr_form.name"}}
          @model={{this}}
          @name="firstName"
        />
      </div>
      <div class="mb-4">
        <LoginForm::Input
          @label={{t "rigistr_form.surname"}}
          @model={{this}}
          @name="lastName"
        />
      </div>
      <div class="mb-4">
        <LoginForm::Input
          min={{this.minDateString}}
          max={{this.maxDateString}}
          required
          @warning={{this.warningErrorDate}}
          @label={{t "rigistr_form.birthday"}}
          @model={{this}}
          @name="birthday"
          @type="date"
        />
      </div>
      <div class="mb-4">
        <LoginForm::Input
          @label={{t "rigistr_form.email"}}
          @model={{this}}
          @name="email"
          @type="email"
        />
      </div>
      <div class="mb-6">
        <LoginForm::Input
          @label={{t "rigistr_form.password"}}
          @model={{this}}
          @name="password"
          @type="password"
        />
        {{#if (or this.usernameError this.passwordError)}}
          <p class="text-red-500 text-xs italic" data-test-form-warning>
            {{t "rigistr_form.warning_enter_credentials"}}
          </p>
        {{/if}}
        {{#if this.errorMessage}}
          <p class="text-red-500 text-xs italic" data-test-form-error>
            {{this.errorMessage}}
          </p>
        {{/if}}
      </div>
      <div class="flex mb-4">
        <button
          data-test-submit-form
          class="bg-blue-500 hover:bg-blue-700 flex-grow text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit"
        >
          {{t "rigistr_form.registration"}}
        </button>
      </div>
      <div class="flex justify-end">
        <LinkTo
          @route="login"
          class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800"
        >
          {{t "rigistr_form.sign_in"}}
        </LinkTo>
      </div>
    {{/if}}
  </form>
</div>