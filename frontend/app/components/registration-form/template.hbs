<div class="w-full max-w-xs mx-auto">
  <form
    class="bg-white rounded px-8 pt-6 pb-8 mb-4"
    {{on "submit" this.onSubmit}}
  >
    <div class="mb-4">
      <LoginForm::Input @label="Имя" @model={{this}} @name="firstName" />
    </div>
    <div class="mb-4">
      <LoginForm::Input @label="Фамилия" @model={{this}} @name="lastName" />
    </div>
    <div class="mb-4">
      <LoginForm::Input
        @label="Дата рождения"
        @model={{this}}
        @name="birthday"
        @type="date"
      />
    </div>
    <div class="mb-4">
      <LoginForm::Input
        @label="Почта"
        @model={{this}}
        @name="email"
        @type="email"
      />
    </div>
    <div class="mb-6">
      <LoginForm::Input
        @label="Пароль"
        @model={{this}}
        @name="password"
        @type="password"
      />
      {{#if (or this.usernameError this.passwordError)}}
        <p class="text-red-500 text-xs italic" data-test-form-warning>
          Пожалуйста, введите логин и пароль.
        </p>
      {{/if}}
      {{#if this.errorMessage}}
        <p class="text-red-500 text-xs italic" data-test-form-error>
          {{this.errorMessage}}
        </p>
      {{/if}}
    </div>
    <div class="flex items-center justify-between">
      <button
        data-test-submit-form
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        type="submit"
      >
        Регистрация
      </button>
      <LinkTo @route="login" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
        Вход
      </LinkTo>
    </div>
  </form>
</div>