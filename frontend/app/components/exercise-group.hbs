<div class="w-1/2 px-2">
  <div class="flex max-w-md overflow-hidden bg-white rounded-lg shadow-lg">
    {{!-- template-lint-disable no-inline-styles style-concatenation --}}
    <div
      style="background-image: url('{{html-safe @group.picture}}'), url('/ui/groups/card-one.svg');background-position: 50% 50%;"
      class="w-1/3 bg-cover"
    ></div>
    <div class="w-2/3 p-4">
      <h1 class="text-2xl text-gray-900">
        {{@group.name}}
      </h1>
      <p class="mt-2 text-sm text-gray-600">
        {{@group.description}}
      </p>
      <div class="item-center flex justify-between mt-3">
        <a
          href={{href-to "group.series" (query-params name=@group.name)}}
          class="px-3 py-2 text-xs font-bold text-white uppercase bg-gray-800 rounded"
          type="button"
        >
          {{t "control_exercises.solve"}} ({{@group.count}})
        </a>
      </div>
    </div>
  </div>
</div>