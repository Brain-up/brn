<div class="py-6">
  <div class="flex max-w-md overflow-hidden bg-white rounded-lg shadow-lg">
    <div
      style="background-image: url('{{html-safe @group.picture}}')"
      class="w-1/3 bg-cover"
    ></div>
    <div class="w-2/3 p-4">
      <h1 class="text-2xl font-bold text-gray-900">
        {{@group.name}}
      </h1>
      <p class="mt-2 text-sm text-gray-600">
        {{@group.description}}
      </p>
      <div class="item-center flex justify-between mt-3">
        <h1 class="text-xl font-bold text-gray-700">
          {{@group.count}}
        </h1>
        <a
          href={{href-to "group.series" (query-params name=@group.name)}}
          class="px-3 py-2 text-xs font-bold text-white uppercase bg-gray-800 rounded"
          type="button"
        >
          {{t "control_exercises.solve"}}
        </a>
      </div>
    </div>
  </div>
</div>