{{component
  this.componentType
  onRightAnswer=this.onRightAnswer
  afterCompleted=this.afterCompleted
  task=@task
  disableAnswers=this.disableAnswers
  disableAudioPlayer=this.disableAudioPlayer
  autoplay=(not this.disableAudioPlayer)
}}
