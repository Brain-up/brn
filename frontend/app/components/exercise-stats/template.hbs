<div
  class="rounded-large column background-statistics flex flex-col items-center justify-between w-full h-full bg-blue-300"
>
  <h3 class="mt-16 mb-1 font-bold text-center text-purple-700">
    {{t "statistics.info_about"}}
  </h3>
  <div
    data-test-exercise-stats
    ...attributes
    class="justify-evenly flex flex-col flex-1 w-full"
  >
    <div class="flex items-center justify-around w-full">
      <ExerciseStats::Panel
        @type="positive"
        @label={{t "statistics.time_board"}}
        class="flex-col w-64 h-64 bg-pink-200 rounded-full"
      >
        <span>
          {{this.timeStats.min}}
        </span>
        <span class="text-2xl font-bold text-center text-blue-900">
          {{t "statistics.time_min"}}
        </span>
        <span>
          {{this.timeStats.sec}}
        </span>
        <span class="text-2xl font-bold text-center text-blue-900">
          {{t "statistics.time_sec"}}
        </span>
      </ExerciseStats::Panel>
      <ExerciseStats::Panel
        @type={{this.attemptsTrend}}
        @label={{t "statistics.wrong_answers"}}
        @value={{this.stats.wrongAnswersCount}}
        class="flex-col w-64 h-64 bg-blue-100 rounded-full"
      />
      <ExerciseStats::Panel
        @type={{this.repeatsTrend}}
        @label={{t "statistics.repeats"}}
        @value={{this.stats.repeatsCount}}
        class="flex-col w-64 h-64 bg-indigo-200 rounded-full"
      />
    </div>
    <div class="flex items-center justify-center">
      <button
        type="button"
        data-test-continue
        class="hover:bg-blue-700 px-4 py-2 mt-2 font-bold text-white bg-blue-500 rounded-full"
        {{on "click" @onComplete}}
      >
        {{t "statistics.continue"}}
      </button>
    </div>
  </div>
</div>