<div data-test-exercise-stats ...attributes class="w-full mb-16">
  <div class="flex items-center justify-start w-full">
    <ExerciseStats::Panel
      @type="positive"
      @label={{t "statistics.time_board"}}
      @value={{this.minutes}}
    />
    <ExerciseStats::Panel
      @type="negative"
      @label={{t "statistics.attempts"}}
      @value={{this.repetitionIndex}}
    />
    <ExerciseStats::Panel
      @type="neutral"
      @label={{t "statistics.tasks"}}
      @value={{@stats.tasksCount}}
    />
  </div>
</div>