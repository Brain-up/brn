{{#let (if @group @group @series.group) as |group|}}
  <blaze-breadcrumbs aria-label="Breadcrumbs">
    <blaze-breadcrumb>
      {{#link-to "groups"}}
        Groups
      {{/link-to}}
    </blaze-breadcrumb>
    <blaze-breadcrumb data-test-group-breadcrumb>
      {{#link-to "group" group}}
        {{group.name}}
      {{/link-to}}
    </blaze-breadcrumb>
    {{#if @series}}
      <blaze-breadcrumb data-test-series-breadcrumb>
        {{#link-to "series" @series}}
          {{@series.name}}
        {{/link-to}}
      </blaze-breadcrumb>
    {{/if}}
  </blaze-breadcrumbs>
{{/let}}