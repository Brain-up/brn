<div class="{{style-namespace "breadcrumbs"}} breadcrumbs-container" ...attributes>
  {{#let (or @group @series.group) as |group|}}
    <ul aria-label="Breadcrumbs" class="list-none breadcrumbs">
      <li>
        <LinkTo @route="groups">Группы</LinkTo>
      </li>
      <li data-test-group-breadcrumb>
        <LinkTo @route="group" @model={{group}}>
          {{group.name}}
        </LinkTo>
      </li>
      {{#if @series}}
        <li data-test-series-breadcrumb>
          <LinkTo @route="group.series" @models={{array group @series}}>
            {{@series.name}}
          </LinkTo>
        </li>
      {{/if}}
    </ul>
  {{/let}}
</div>